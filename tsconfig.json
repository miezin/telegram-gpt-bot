{
"compilerOptions": {
  "allowSyntheticDefaultImports": true,
  "outDir": "dist",
  "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "incremental": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
